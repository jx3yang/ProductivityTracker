input NewCard {
  name: String!
  dueDate: String
  parentListId: ID!
}

input NewList {
  name: String!
}

type Mutation {
  createCard(card: NewCard!): Card!
  createList(list: NewList!): List!
}

type Query {
  getCard(id: ID!): Card
  getList(id: ID!): List
}
